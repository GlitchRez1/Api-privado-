<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:controller="org.example.telacad.LoginController"
           xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml/1">

    <!-- Fundo verde; o CSS aplica no root -->
    <BorderPane fx:id="rootPane" prefWidth="980.0" prefHeight="600.0">
        <top>
            <VBox alignment="CENTER" spacing="6.0">
                <Label fx:id="titleLabel" text="GrowU.">
                    <font><Font name="System Bold" size="64.0"/></font>
                </Label>
                <Label fx:id="subtitleLabel" text="CONECTANDO MENTES, CULTIVANDO FUTUROS."/>
            </VBox>
        </top>

        <center>
            <!-- Cartão branco central -->
            <VBox alignment="CENTER" spacing="14.0" maxWidth="560.0" styleClass="card-wrapper">
                <VBox spacing="10.0" alignment="CENTER_LEFT" maxWidth="520.0" styleClass="card">
                    <children>
                        <VBox spacing="6.0" alignment="CENTER_LEFT">
                            <Label text="E-mail Institucional" styleClass="field-label"/>
                            <TextField fx:id="emailField" promptText="email@institucional.com" prefWidth="520.0" />
                        </VBox>

                        <VBox spacing="6.0" alignment="CENTER_LEFT">
                            <Label text="Senha" styleClass="field-label"/>
                            <PasswordField fx:id="senhaField" promptText="•••" prefWidth="520.0"/>
                        </VBox>

                        <HBox alignment="CENTER" spacing="10.0">
                            <Button fx:id="loginBtn"
                                    text="ENTRAR"
                                    onAction="#handleLoginAction"
                                    defaultButton="true"
                                    styleClass="primary-button"
                                    prefWidth="140.0"/>
                        </HBox>

                        <HBox alignment="CENTER" spacing="6.0">
                            <Label text="Novo aqui?"/>
                            <Hyperlink text="Criar uma conta" onAction="#handleGoToCadastro"/>
                        </HBox>
                    </children>

                    <padding>
                        <Insets top="22" right="22" bottom="22" left="22"/>
                    </padding>
                </VBox>
            </VBox>
        </center>

        <padding>
            <Insets top="24" right="24" bottom="24" left="24"/>
        </padding>
    </BorderPane>
</StackPane>
